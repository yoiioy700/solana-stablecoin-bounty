{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "rootDir": "src",
        "resolveJsonModule": true,
        "declaration": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ]
}